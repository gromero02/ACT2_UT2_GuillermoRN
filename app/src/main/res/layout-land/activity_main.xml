<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#718E50"
    android:backgroundTint="#C1EFA4"
    android:foregroundGravity="center"
    android:orientation="vertical"
    android:textAlignment="center">

    <View
        android:id="@+id/dv"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#000000"
        android:drawingCacheQuality="auto"
        android:foregroundTint="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_margin="5dp"
        android:text="@string/txtvtitulo"
        android:textAlignment="center"
        android:textColor="#161F4E"
        android:textSize="48sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/dv1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#000000"
        android:drawingCacheQuality="auto"
        android:foregroundTint="#000000" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="#B53D3D"
        android:backgroundTint="#E4C0C0" />

    <View
        android:id="@+id/dv3"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#000000"
        android:drawingCacheQuality="auto"
        android:foregroundTint="#000000" />

    <TextView
        android:id="@+id/txtvAñadirFruitis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/txtvañadirfruiti"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtxtNombre"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.5"
            android:backgroundTint="#000000"
            android:backgroundTintMode="src_in"
            android:ems="10"
            android:hint="nombre ...."
            android:inputType="textPersonName"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtxtPeso"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.5"
            android:backgroundTint="#000000"
            android:backgroundTintMode="src_in"
            android:ems="10"
            android:hint="peso ...."
            android:inputType="textPersonName"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <CheckBox
            android:id="@+id/chbPodrida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.5"
            android:text="Podrida"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btAñadir"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#7E8154"
            android:foregroundGravity="center"
            android:onClick="añadir"
            android:text="@string/btAñadir" />
    </LinearLayout>

    <View
        android:id="@+id/dv10"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#000000"
        android:drawingCacheQuality="auto"
        android:foregroundTint="#000000" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="11dp" />

    <View
        android:id="@+id/dv11"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#000000"
        android:drawingCacheQuality="auto"
        android:foregroundTint="#000000" />
    <TextView
        android:id="@+id/txtvGestionarFruitis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/txtvgestionarfruitis"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btCargarTodos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="#91A54D"
            android:onClick="actmtd"
            android:text="@string/btcargartodos" />

        <Button
            android:id="@+id/btCargarUltimo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#72813F"
            android:onClick="actmul"
            android:text="@string/btcargarultimo" />

        <Button
            android:id="@+id/btFiltroNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#87C161"
            android:onClick="actlpnomb"
            android:text="@string/btfiltronombre" />

        <EditText
            android:id="@+id/edtxtNombreFiltro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Nombre para filtrar..."
            android:inputType="textPersonName"
            android:textSize="20sp"
            android:visibility="invisible" />

    </LinearLayout>
    <View
        android:id="@+id/dv5"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#000000"
        android:drawingCacheQuality="auto"
        android:foregroundTint="#000000" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/footer" />
</LinearLayout>